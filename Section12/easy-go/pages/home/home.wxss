}

.item-view {
  width: 100%;
  height: 200px;
  line-height: 200px;
}

.activity-view {
  background-color: white;
}

.activity-top {
  text-align: center;
  line-height: 40px;
  color: gray;
}

.activity-bottom {
  display: flex;
  justify-content: space-around;
  font-size: 11px;
}

