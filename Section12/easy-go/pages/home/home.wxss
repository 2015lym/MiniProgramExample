  height: 70px;
  width: 60px;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.activity-image {
  height: 30px;
  width: 30px;
}

.original-price {
  text-decoration: line-through;
}

