/* pages/test-form/test-form.wxss */

page {
  background-color: #F8F8FA;
}

.title-view {
  margin-top: 16px;
  margin-left: 16px;
}

input {
  border: 1rpx solid #dddee1;
  margin: 8px 16px;
  padding: 0px 8px;
  height: 30px;
  background-color: white;
}

.picker {
  color: gray;
  margin: 8px 16px;
  padding: 8px;
  border: 1rpx solid #dddee1;
  background-color: white;
}

.textarea-view {
  height: 100px;
  display: flex;
  flex-wrap: wrap;
  margin: 15px;
  margin-bottom: 45px;
}

textarea {
  background-color: white;
  height: 70px;
  width: 100%;
  padding: 16px;
}

.textarea-number {
  background-color: white;
  width: 100%;
  text-align: right;
}
