<!--index.wxml-->
<form catchsubmit="submit" catchreset="reset">

  <view class="input-view">
    <text>账号</text>
    <input placeholder="请输入账号" name="account"></input>
  </view>

  <view class="input-view">
    <text>密码</text>
    <input placeholder="请输入密码" name="password"></input>
  </view>

  <view class="switch-view">
    <text space="emsp">记住密码 </text>
    <switch checked name="isRember" />
  </view>

  <view class="button-view">
    <button type="primary" formType="submit">登录</button>
  </view>
</form>